{% macro audio(props) %}
  <div class="audio">
    {% if props.hasImage %}
      <div class="audio-image">
        <img src="{{ props.image.src }}" alt="{{ props.image.alt }}">
      </div><!-- /.audio-image -->
    {% endif %}

    <audio controls>
      <source src="{{props.audio.ogg}}" type="audio/ogg"/>
      <source src="{{props.audio.mpeg}}" type="audio/mpeg"/>
      Your browser does not support the audio element.
    </audio>
  </div><!-- /.audio -->
{% endmacro %}



